
  <aside class="column is-3">
    <% if customer.image.present? %>
      <p><%= image_tag customer.image.variant(resize_to_limit: [285, 285]).processed  %></p>
    <% end %>
    <h3><%= link_to customer.full_name, customer %></h3>
     <p><%= customer.phone_number %></p>
    <p><%= customer.email_address %></p>
    <p><%= customer.notes %></p>
  </aside>

